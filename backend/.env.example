# ========================================
# APPLICATION METADATA
# ========================================
PROJECT_NAME=AIDA
PROJECT_TAGLINE=AI-Driven Security Audit Platform
PROJECT_DESCRIPTION=Intelligent autonomous penetration testing powered by AI
VERSION=1.0.0-alpha
API_V1_PREFIX=/api

# ========================================
# DATABASE CREDENTIALS
# IMPORTANT: Change these values in production!
# ========================================
POSTGRES_USER=aida
POSTGRES_PASSWORD=aida_secure_password_change_me
POSTGRES_DB=aida_assessments
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URL (auto-constructed from above values in config.py)
# Format: postgresql://{user}:{password}@{host}:{port}/{database}
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ========================================
# CORS ORIGINS
# Comma-separated list of allowed origins
# Production: Add your frontend domain
# ========================================
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# CONTAINER CONFIGURATION (Exegol pentesting environment)
# ========================================
CONTAINER_WORKSPACE_BASE=/workspace
DEFAULT_CONTAINER_NAME=exegol-aida
COMMAND_TIMEOUT=300

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=logs
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5

# ========================================
# BACKEND API URL (for MCP server)
# ========================================
BACKEND_API_URL=http://localhost:8000/api

# ========================================
# SECURITY (Future use)
# ========================================
# Uncomment and set a strong secret key in production
# SECRET_KEY=your-super-secret-key-min-32-chars-change-me-in-production
# ENCRYPT_CREDENTIALS=false

# ========================================
# DEVELOPMENT / PRODUCTION
# ========================================
ENVIRONMENT=development
DEBUG=false
